{
  "extends": "eslint:recommended",
  // Parser
  "parser": "babel-eslint",
  // ECMA Features
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "arrowFunctions": true,
          "blockBindings": true,
          "classes": true,
          "defaultParams": true,
          "destructuring": true,
          "modules": true,
          "objectLiteralComputedProperties": true,
          "templateStrings": true,
          "jsx": true
      }
  },
  "rules": {
      // Possible Errors
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-empty": 2,
      "no-func-assign": 2,
      "no-inner-declarations": 2,
      "no-unreachable": 2,
      "no-unexpected-multiline": 0,
      "no-sequences": 2,
      // Best practices
      "consistent-return": 0,
      "curly": [2, "all"],
      "eqeqeq": 2,
      "no-else-return": 2,
      "no-multi-spaces": 0,
      "no-console": 0,
      // Strict mode
      "strict": 0,
      // Variables
      "no-var": 2,
      "no-shadow": 0,
      "no-unused-vars": [2, {"vars": "all", "args": "after-used", "ignoreRestSiblings": true}],
      "no-undef": 2,
      "no-use-before-define": 0,
      "prefer-const": 2,
      "no-const-assign": 2,
      // Style
      "semi": ["warn", "never"],
      "no-new-object": 2,
      "no-useless-concat": 2,
      "no-implicit-coercion": 2,
      "no-extra-semi": 0,
      "no-mixed-spaces-and-tabs": 0,
      // ES6
      "no-this-before-super": 2,
      "object-shorthand": 2,
      // React
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/react-in-jsx-scope": 2,
  },
  "env": {
      "node": true,
      "browser": true,
      "es6": true
  },
  "plugins": [
      "react"
  ]
}
